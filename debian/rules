#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

package=gtk-gnutella

OPTFLAGS=-O2 -g
EXTRA_FLAGS=

ifeq ($(DEB_BUILD_ARCH), alpha)
	EXTRA_FLAGS=-mieee
endif


build:
	$(checkdir)
	rm -f config.sh
	./Configure -Dccflags="-Wall $(EXTRA_FLAGS)" -Doptimize="$(OPTFLAGS)" \
		-Dprefix=/usr -Dprivlib=/usr/share/gtk-gnutella -ders
	$(MAKE)
#	cp menu.ex debian/tmp/usr/lib/menu/xtranslate 
	touch build

clean:
	$(checkdir)
	-rm -f build
	-$(MAKE) clobber
	-rm -f `find . -name "*~"`
	-rm -rf debian/tmp debian/files* core debian/substvars

binary-indep: checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: checkroot build
	$(checkdir)
	-rm -rf debian/tmp
	install -d debian/tmp
	cd debian/tmp && install -d `cat ../dirs`
	$(MAKE) install INSTALL_PREFIX=`pwd`/debian/tmp
	strip --remove-section=.comment --remove-section=.note `pwd`/debian/tmp/usr/bin/gtk-gnutella
# Must have debmake installed for this to work. Otherwise please copy
# /usr/bin/debstd into the debian directory and change debstd to debian/debstd
	debstd ChangeLog NEWS README TODO 
	dpkg-gencontrol -isp
	chown -R root.root debian/tmp
	chmod -R go=rX debian/tmp
# Next line removes spurious symlink -- RAM, 26/08/2001
	rm -f debian/tmp/.so.
	dpkg --build debian/tmp ..

define checkdir
	test -f debian/rules
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
